@model project.Data.Post

<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        .container-main {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 50vh;
        }

        .container-delete {
            max-width: 500px;
            background-color: #fff;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        h1 {
            font-size: 2rem;
            margin-bottom: 20px;
            color: #333;
        }

        p {
            font-size: 1rem;
            color: #555;
            margin-bottom: 30px;
        }

        .form-delete {
            display: flex;
            justify-content: center;
            gap: 15px;
        }

        button[type="submit"] {
            background-color: #dc3545;
            color: #fff;
            font-size: 1rem;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        button[type="submit"]:hover {
            background-color: #c82333;
        }

        .a-delete {
            font-size: 1rem;
            color: #007bff;
            text-decoration: none;
            padding: 10px 20px;
            background-color: #f8f9fa;
            border: 1px solid #ddd;
            border-radius: 5px;
            transition: background-color 0.3s, color 0.3s;
        }

        .a-delete:hover {
            background-color: #e2e6ea;
            color: #0056b3;
        }
    </style>
</head>
<body>
    <div class="container-main">
        <div class="container-delete">
            <h1>Delete Post</h1>

            <p>Are you sure you want to delete this post?</p>

            <form asp-action="Delete" class="form-delete">
                <input type="hidden" asp-for="id" />
                <button type="submit">Delete</button>
                <a class="a-delete" href="@Url.Action("Index")">Cancel</a>
            </form>
        </div>
    </div>
</body>
</html>
