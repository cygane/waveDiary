@model project.Data.Post

<!DOCTYPE html>
<html lang="en">
<head>
    <style>      
        .body {
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            height: 100vh;
        }

        h1 {
            text-align: center;
            color: #0056b3;
            margin-bottom: 20px;
        }

        .form-create {
            background-color: hsl(211, 70%, 85%);
            border: 4px solid #007bff;
            border-radius: 8px;
            padding: 20px;
            width: 80%;
            max-width: 600px;
            margin: 20px auto;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        }

        .labelCreate {
            display: block;
            margin-bottom: 8px;
            font-weight: bold;
            color: #0056b3;
        }

        .inputCreate {
            width: 100%;
            padding: 15px; /* Increased padding for taller inputs */
            margin-bottom: 15px;
            border: 1px solid #007bff;
            border-radius: 5px;
            font-size: 14px;
            height: 50px; /* Adjusted height for taller inputs */
        }

        textarea.inputCreate {
            resize: none;
            height: 100px; /* Adjust height for textarea */
        }

        .checkbox-container {
            display: inline-flex; /* Inline-flex for label and checkbox alignment */
            align-items: center;
            margin-bottom: 15px;
        }

        .inputCheckbox {
            margin-right: 10px;
            width: 20px; /* Same size as label text */
            height: 20px;
        }

        .submit-button {
            background-color: #007bff;
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            align-self: flex-end; /* Push button to the right */
        }

        .submit-button:hover {
            background-color: #0056b3;
        }

        .button-container {
            display: flex;
            justify-content: flex-end; /* Align button to the right */
        }
    </style>
    </head>
    <body>
        <div class="body">
            <h1>Create Post</h1>
            <form class="form-create" asp-action="Create">
                <input type="hidden" asp-for="id" />
                <div>
                    <label class="labelCreate" asp-for="title"></label>
                    <input class="inputCreate" asp-for="title" />
                    <span asp-validation-for="title" class="text-danger"></span>
                </div>
                <div>
                    <label class="labelCreate" asp-for="text"></label>
                    <textarea class="inputCreate" asp-for="text"></textarea>
                    <span asp-validation-for="text" class="text-danger"></span>
                </div>
                <div>
                    <label class="labelCreate" asp-for="photo"></label>
                    <input class="inputCreate" asp-for="photo" />
                    <span asp-validation-for="photo" class="text-danger"></span>
                </div>
                <div class="checkbox-container">
                    <label class="labelCreate" asp-for="isPublic"></label>
                    <input class="inputCheckbox" asp-for="isPublic" type="checkbox" />
                    <span asp-validation-for="isPublic" class="text-danger"></span>
                </div>
                <div class="button-container">
                    <button class="submit-button" type="submit">Create Post</button>
                </div>
            </form>
        </div>
    </body>
</html>
