@model project.Data.Post

<!DOCTYPE html>
<html lang="en">
<head>
    <style>      
        .body {
            max-width: 1000px;
            margin: 0 auto;
        }

        h1 {
            text-align: center;
            margin-bottom: 20px;
        }

        .form-create {
            border: 2px solid #0056b3;
            border-radius: 8px;
            margin-bottom: 20px;
            padding: 20px;
            transition: transform 0.3s ease;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
        }

        .labelCreate {
            display: block;
            margin-bottom: 8px;
            font-weight: bold;
            color: #0056b3;
        }

        .inputCreate {
            width: 100%;
            padding: 15px; 
            margin-bottom: 15px;
            border: 1px solid #007bff;
            border-radius: 5px;
            font-size: 16px;
            height: 50px; 
        }

        textarea.inputCreate {
            resize: none;
            height: 200px; 
        }

        .checkbox-container {
            display: inline-flex; 
            align-items: center;
            margin-bottom: 15px;
        }

        .inputCheckbox {
            margin-right: 10px;
            width: 20px; 
            height: 20px;
        }

        .submit-button {
            background-color: #007bff;
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            align-self: flex-end;
        }

        .submit-button:hover {
            background-color: #0056b3;
        }

        .button-container {
            display: flex;
            justify-content: flex-end;
        }
    </style>
    </head>
    <body>
        <div class="body">
            <h1>Create Post</h1>
            <form class="form-create" asp-action="Create">
                <input type="hidden" asp-for="id" />
                <div>
                    <label class="labelCreate" asp-for="title"></label>
                    <input class="inputCreate" asp-for="title" />
                    <span asp-validation-for="title" class="text-danger"></span>
                </div>
                <div>
                    <label class="labelCreate" asp-for="text"></label>
                    <textarea class="inputCreate" asp-for="text"></textarea>
                    <span asp-validation-for="text" class="text-danger"></span>
                </div>
                <div>
                    <label class="labelCreate" asp-for="photo"></label>
                    <input class="inputCreate" asp-for="photo" />
                    <span asp-validation-for="photo" class="text-danger"></span>
                </div>
                <div class="checkbox-container">
                    <label class="labelCreate" asp-for="isPublic"></label>
                    <input class="inputCheckbox" asp-for="isPublic" type="checkbox" />
                    <span asp-validation-for="isPublic" class="text-danger"></span>
                </div>
                <div class="button-container">
                    <button class="submit-button" type="submit">Create Post</button>
                </div>
            </form>
        </div>
    </body>
</html>
