@model project.Data.Post

<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        .body {
            max-width: 1000px;
            margin: 0 auto;
        }

        h1 {
            text-align: center;
            margin-bottom: 20px;
        }

        .form-edit {
            border: 2px solid #d4a017;
            border-radius: 8px;
            margin-bottom: 20px;
            padding: 20px;
            transition: transform 0.3s ease;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
        }

        .labelEdit {
            display: block;
            margin-bottom: 8px;
            font-weight: bold;
            color: #d4a017; 
        }

        .inputEdit {
            width: 100%;
            padding: 15px; 
            margin-bottom: 15px;
            border: 1px solid #d4a017;
            border-radius: 5px;
            font-size: 14px;
            height: 50px;
        }

        textarea.inputEdit {
            resize: none;
            height: 100px; 
        }

        .checkbox-container {
            display: inline-flex;
            align-items: center;
            margin-bottom: 15px;
        }

        .inputCheckbox {
            margin-right: 10px;
            width: 20px;
            height: 20px;
        }

        .submit-button {
            background-color: #d4a017; 
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            align-self: flex-end; 
        }

        .submit-button:hover {
            background-color: #b48814; 
        }

        .button-container {
            display: flex;
            justify-content: flex-end; 
        }
    </style>
</head>
<body>
    <div class="body">
        <h1>Edit Post</h1>
        <form class="form-edit" asp-action="Edit">
            <input type="hidden" asp-for="id" />
            <input type="hidden" asp-for="username" />
            <div>
                <label class="labelEdit" asp-for="title"></label>
                <input class="inputEdit" asp-for="title" />
                <span asp-validation-for="title" class="text-danger"></span>
            </div>
            <div>
                <label class="labelEdit" asp-for="text"></label>
                <textarea class="inputEdit" asp-for="text"></textarea>
                <span asp-validation-for="text" class="text-danger"></span>
            </div>
            <div class="checkbox-container">
                <label class="labelEdit" asp-for="isPublic"></label>
                <input class="inputCheckbox" asp-for="isPublic" type="checkbox" />
                <span asp-validation-for="isPublic" class="text-danger"></span>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="button-container">
                <button class="submit-button" type="submit">Edit Post</button>
            </div>
        </form>
    </div>
</body>
</html>
