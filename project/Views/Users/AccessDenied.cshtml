@{
    ViewData["Title"] = "Access Denied";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        .container-main {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 50vh;
        }

        .container-access-denied {
            max-width: 600px;
            text-align: center;
            background-color: #fff;
            padding: 40px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        h1 {
            font-size: 2.5rem;
            margin-bottom: 20px;
            color: #dc3545; 
        }

        p {
            font-size: 1.1rem;
            color: #555;
            margin-bottom: 20px;
        }

        .btn-home {
            font-size: 1rem;
            color: #fff;
            background-color: #007bff;
            text-decoration: none;
            padding: 10px 20px;
            border-radius: 5px;
            transition: background-color 0.3s, box-shadow 0.3s;
        }

        .btn-home:hover {
            background-color: #0056b3;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }
    </style>
</head>
<body>
    <div class="container-main">
        <div class="container-access-denied">
            <h1>Access Denied</h1>
            <p>You do not have permission to access this page.</p>
            <p>Please contact the administrator if you believe this is a mistake.</p>
            <a href="@Url.Action("Index", "Posts")" class="btn-home">Go Back to Home</a>
        </div>
    </div>
</body>
</html>
